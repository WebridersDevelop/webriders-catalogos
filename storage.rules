rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Reglas para imágenes de productos
    match /catalogs/{catalogId}/products/{productId}/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;

      // Solo usuarios autenticados pueden subir imágenes
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Máximo 5MB
        && request.resource.contentType.matches('image/.*');
    }

    // Reglas para logos de catálogos
    match /catalogs/{catalogId}/logo/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;

      // Solo usuarios autenticados pueden subir logos
      allow write: if request.auth != null
        && request.resource.size < 2 * 1024 * 1024  // Máximo 2MB
        && request.resource.contentType.matches('image/.*');
    }
  }
}
